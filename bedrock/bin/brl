#!/bin/sh
### Bedrock Linux 1.0alpha4 Bosco
### brl (BedRock aLl)
# This script will run the argument in all available clients

# check for need to print help
if [ -z "$1" ] || [ "$1" = "-h" ] || [ "$1" = "--help" ]
then
cat <<EOF
Usage: brl COMMAND

brl will run COMMAND in all available clients.

EOF
	exit 0
fi

for CLIENT in $(bri -l)
do
	echo "brl: running commands in $CLIENT"
	brc $CLIENT "$@"
done
